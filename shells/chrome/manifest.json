{
    "name": "Octo Previewer",
    "version": "1.0.4",
    "description": "Live preview for markdown comments in PRs/Issues/Gists on GitHub",
    "manifest_version": 2,
    "permissions": ["activeTab"],
    "content_scripts": [{
        "matches": ["https://github.com/*", "https://gist.github.com/*"],
        "js": ["inject.js"],
        "run_at": "document_idle"
    }],
    "web_accessible_resources": [
        "live-preview.js",
        "live-preview.css"
    ]
}
